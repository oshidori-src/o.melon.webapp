'use strict';


/**
 * @name head
 * @memberOf o.melon.views.ejs.templates
 * @overview Component that implements head element.
 */
%>


<meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">

<meta name="Description" content="<%= title %>">
<meta name="keywords" content="<%= om.webapp.name %>, <%= page %>">
<meta name="author" content="">

<meta property="og:title" content="<%= title %>" />
<meta property="og:description" content="<%= page %> page of <%= om.webapp.name %>" />
<meta property="og:url" content="<%= om.homeURL %>" />
<meta property="og:locale" content="en_US" />
<meta property="og:image" content="<%= om.homeURL %>/img/open_graph_logo.png" />
<meta property="og:type" content="website" />
<meta property="og:site_name" content="<%= om.webapp.name %>" />

<title><%= om.webapp.name %> | <%= title %></title>

<!-- Disable tap highlight on IE -->
<meta name="msapplication-tap-highlight" content="no">

<!-- Web Application manifest -->
<link rel="manifest" href="/manifest.json">

<!-- Add to Chrome on Android -->
<meta name="mobile-web-app-capable" content="yes">
<meta name="application-name" content="<%= om.webapp.name %>">
<link rel="icon" sizes="192x192" href="/img/touch/chrome-touch-icon-192x192.png">

<!-- Add to Safari on iOS -->
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="black">
<meta name="apple-mobile-web-app-title" content="<%= om.webapp.name %>">
<link rel="apple-touch-icon" href="/img/touch/apple-touch-icon.png">

<!-- Tile icon for Windows -->
<meta name="msapplication-TileImage" content="/img/touch/ms-touch-icon-144x144-precomposed.png">
<meta name="msapplication-TileColor" content="#22f285">

<!-- Color the status bar on mobile devices -->
<meta name="theme-color" content="#22f285">

<!-- Favicon -->
<link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon">

<!-- Inject plugins from views/lib if development mode is enabled -->
<% if (om.devMode) { %>
<!-- Development -->

<!-- inject:css -->
<!-- endinject -->
<!-- inject:js -->
<!-- endinject -->

<% } else { %>
<!-- Production -->

<script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script type="text/javascript" defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>

<% } %>

<!-- Main styles and JavaScript -->
<link rel="stylesheet" href="/css/main<%= om.webapp.minify ? ".min" : "" %>.css">
<script type="text/javascript" async src='/js/main<%= om.webapp.minify ? ".min" : "" %>.js'></script>
